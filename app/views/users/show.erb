<% @title = @user.username %>
<% @body_title = "User #{@user.username}" %>

<p>Username: <%= @user.username %></p>
<p>Email: <%= @user.email %></p>

<!-- raise user permission error: Do not have permission to make changes -->
<!--        note: no error will be shown if @error does not exist        -->
<% if !!@error %>
    <h3>Error: <%= @error %></h3>
    <br>
<% end %>

<!-- don't even show EDIT link if this user doesn't match current user-->
<% if Helpers.current_user(session)==@user %>
    <p style='margin-top:5%'><a href='/users/<%= @user.id %>/edit'>Edit</a></p>
<% end %>