  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title><%= @title || "SaleTracker" %></title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
    <link rel="stylesheet" href="/stylesheets/custom.css" />
  </head>
  <body>
    <div class='head_and_body_wrapper'>
      <header>
        <a href='/'><h1>SaleTracker</h1></a>
      </header>

      <nav>
        <% if Helpers.is_logged_in?(session) %>
            <div id='left_link'>
              <a href='/users/dashboard'>Dashboard - <%= Helpers.current_user(session).username %></a>
            </div>
            <div id='right_link'>
              <a href='/logout'>Log Out</a>
            </div>
          <% else %>
            <div id='left_link'>
              <a href='/register'>Register</a>
            </div>
            <div id='right_link'>
              <a href='/login'>Log In</a>
            </div>
          <% end %>
      </nav>
      
      <div class="body_wrapper">
      
        <% if !!@body_title %>
          <h2><%= @body_title %></h2>
        <% end %>
          
        <%= yield %>

        <footer class="branding">
          <small>&copy; 2019 <strong>SaleTracker</strong></small>
        </footer>
      
      </div>
    </div>
    

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>
